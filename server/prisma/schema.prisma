generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
  age   Int?
}

model StockAdvisory {
  id        Int      @id @default(autoincrement())
  sector    String
  fromDate  String
  toDate    String
  htmlContent String @db.LongText
  stocks    Stock[]
}

model Stock {
  id               Int            @id @default(autoincrement())
  symbol           String
  companyName      String
  stockAdvisoryId  Int
  stockAdvisory    StockAdvisory @relation(fields: [stockAdvisoryId], references: [id], onDelete: Cascade)
}